{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "rootDir": "src/",
        "outDir": "lib/",
        "moduleResolution": "node",
        "declaration": true,
        "newLine": "LF",
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
    },
    "exclude": [
        "node_modules/",
        "lib/",
        "test/",
    ]
}